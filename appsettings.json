{
  "DetailedErrors": true,
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft": "Information",
      "budoco": "Information",
      "Npgsql": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "PostgreSQL": "Host=127.0.0.1;Database=budoco;Username=postgres;Password=YOUR_PASSWORD",
    "SqlServer": "Server=(localdb)\\MSSQLLocalDB;Database=budoco;Trusted_Connection=true;MultipleActiveResultSets=true"
  },
  "Budoco": {
    "DebugWhatEnvIsThis": "appsettings.json",
    "DatabaseType": "SqlServer",
    
    "Application": {
      "AppName": "Budoco",
      "WebsiteUrlRootWithoutSlash": "http://localhost:5000",
      "UseCustomCss": false,
      "CustomCssFilename": "custom_css_example.css",
      "RowsPerPage": 30,
      "DateFormat": "yyyy-MM-dd HH:mm",
      "UseDeveloperExceptionPage": true
    },
    
    "Email": {
      "Smtp": {
        "Host": "smtp.gmail.com",
        "Port": 465,
        "User": "YOUR_ACCOUNT@gmail.com",
        "Password": "YOUR_PASSWORD"
      },
      "Imap": {
        "Host": "imap.gmail.com",
        "Port": 993,
        "User": "YOUR_ACCOUNT@gmail.com",
        "Password": "YOUR_PASSWORD"
      },
      "OutgoingEmailDisplayName": "Budoco Team",
      "IssueEmailPreamble": "Reply to this email directly or view issue on Budoco at $URL",
      "EnableIncomingEmail": true,
      "EnableIncomingEmailIssueCreation": true,
      "MaxNumberOfSendingRetries": 3,
      "SecondsToSleepAfterCheckingIncomingEmail": 300
    },
    
    "UserRegistration": {
      "NewUserStartsInactive": false,
      "NewUserStartsReportOnly": false,
      "RegistrationRequestExpirationInHours": 1,
      "InviteUserExpirationInHours": 48
    },
    
    "CustomFields": {
      "Field1": {
        "Enabled": true,
        "LabelSingular": "Status",
        "LabelPlural": "Statuses"
      },
      "Field2": {
        "Enabled": true,
        "LabelSingular": "Priority",
        "LabelPlural": "Priorities"
      },
      "Field3": {
        "Enabled": false,
        "LabelSingular": "Color",
        "LabelPlural": "Colors"
      },
      "Field4": {
        "Enabled": true,
        "LabelSingular": "Category",
        "LabelPlural": "Categories"
      },
      "Field5": {
        "Enabled": false,
        "LabelSingular": "Five",
        "LabelPlural": "Fives"
      },
      "Field6": {
        "Enabled": false,
        "LabelSingular": "Six",
        "LabelPlural": "Sixes"
      }
    },
    
    "Security": {
      "CheckForDangerousSqlKeywords": true,
      "DangerousSqlKeywords": "alter,copy,create,createdb,createrole,createuser,delete,drop,exec,execute,grant,insert,update"
    },
    
    "Logging": {
      "LogFileFolder": "budoco_logs",
      "LogLevelMicrosoft": "Information",
      "LogLevelBudoco": "Information", 
      "LogLevelPostgres": "Information"
    },
    
    "Debug": {
      "SkipSendingEmails": false,
      "AutoConfirmRegistration": false,
      "EnableRunSql": false,
      "SkipDeleteOfIncomingEmails": false,
      "PathToEmailFile": "",
      "FolderToSaveEmails": ""
    }
  }
}
