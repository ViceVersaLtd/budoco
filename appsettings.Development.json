{
  "DetailedErrors": true,
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft": "Information",
      "budoco": "Debug",
      "Npgsql": "Information"
    }
  },
  "ConnectionStrings": {
    "PostgreSQL": "Host=127.0.0.1;Database=budoco_dev;Username=postgres;Password=test123",
    "SqlServer": "Server=(localdb)\\MSSQLLocalDB;Database=budoco_dev;Trusted_Connection=true;MultipleActiveResultSets=true"
  },
  "Budoco": {
    "DebugWhatEnvIsThis": "appsettings.Development.json",
    "DatabaseType": "SqlServer",
    
    "Application": {
      "AppName": "Budoco (Development)",
      "WebsiteUrlRootWithoutSlash": "http://localhost:5000",
      "UseDeveloperExceptionPage": true
    },
    
    "Email": {
      "Smtp": {
        "Host": "smtp.gmail.com",
        "Port": 465,
        "User": "YOUR_DEV_ACCOUNT@gmail.com",
        "Password": "YOUR_DEV_PASSWORD"
      },
      "Imap": {
        "Host": "imap.gmail.com",
        "Port": 993,
        "User": "YOUR_DEV_ACCOUNT@gmail.com",
        "Password": "YOUR_DEV_PASSWORD"
      },
      "OutgoingEmailDisplayName": "Budoco Development Team",
      "EnableIncomingEmail": false,
      "EnableIncomingEmailIssueCreation": false
    },
    
    "UserRegistration": {
      "NewUserStartsInactive": false,
      "NewUserStartsReportOnly": false,
      "RegistrationRequestExpirationInHours": 24,
      "InviteUserExpirationInHours": 168
    },
    
    "Security": {
      "CheckForDangerousSqlKeywords": false
    },
    
    "Logging": {
      "LogFileFolder": "budoco_logs_dev",
      "LogLevelMicrosoft": "Information",
      "LogLevelBudoco": "Debug",
      "LogLevelPostgres": "Information"
    },
    
    "Debug": {
      "SkipSendingEmails": true,
      "AutoConfirmRegistration": true,
      "EnableRunSql": true,
      "SkipDeleteOfIncomingEmails": true,
      "PathToEmailFile": "",
      "FolderToSaveEmails": "budoco_logs_dev/emails"
    }
  }
}
