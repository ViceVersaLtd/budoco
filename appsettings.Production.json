{
  "DetailedErrors": false,
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft": "Warning",
      "budoco": "Information",
      "Npgsql": "Warning"
    }
  },
  "ConnectionStrings": {
    "PostgreSQL": "Host=YOUR_DB_SERVER;Database=budoco;Username=YOUR_DB_USER;Password=YOUR_DB_PASSWORD;SslMode=Require",
    "SqlServer": "Server=YOUR_DB_SERVER;Database=budoco;User Id=YOUR_DB_USER;Password=YOUR_DB_PASSWORD;TrustServerCertificate=false;Encrypt=true"
  },
  "Budoco": {
    "DebugWhatEnvIsThis": "appsettings.Production.json",
    "DatabaseType": "PostgreSQL",
    
    "Application": {
      "AppName": "Budoco",
      "WebsiteUrlRootWithoutSlash": "https://YOURDOMAIN.COM",
      "UseCustomCss": false,
      "CustomCssFilename": "custom_css_example.css",
      "RowsPerPage": 30,
      "DateFormat": "yyyy-MM-dd HH:mm",
      "UseDeveloperExceptionPage": false
    },
    
    "Email": {
      "Smtp": {
        "Host": "YOUR_SMTP_HOST",
        "Port": 587,
        "User": "YOUR_SMTP_USER",
        "Password": "YOUR_SMTP_PASSWORD"
      },
      "Imap": {
        "Host": "YOUR_IMAP_HOST",
        "Port": 993,
        "User": "YOUR_IMAP_USER",
        "Password": "YOUR_IMAP_PASSWORD"
      },
      "OutgoingEmailDisplayName": "Your Company Support Team",
      "IssueEmailPreamble": "Reply to this email directly or view issue on our support portal at $URL",
      "EnableIncomingEmail": true,
      "EnableIncomingEmailIssueCreation": true,
      "MaxNumberOfSendingRetries": 5,
      "SecondsToSleepAfterCheckingIncomingEmail": 300
    },
    
    "UserRegistration": {
      "NewUserStartsInactive": true,
      "NewUserStartsReportOnly": true,
      "RegistrationRequestExpirationInHours": 1,
      "InviteUserExpirationInHours": 48
    },
    
    "CustomFields": {
      "Field1": {
        "Enabled": true,
        "LabelSingular": "Status",
        "LabelPlural": "Statuses"
      },
      "Field2": {
        "Enabled": true,
        "LabelSingular": "Priority",
        "LabelPlural": "Priorities"
      },
      "Field3": {
        "Enabled": false,
        "LabelSingular": "Color",
        "LabelPlural": "Colors"
      },
      "Field4": {
        "Enabled": true,
        "LabelSingular": "Category",
        "LabelPlural": "Categories"
      },
      "Field5": {
        "Enabled": false,
        "LabelSingular": "Five",
        "LabelPlural": "Fives"
      },
      "Field6": {
        "Enabled": false,
        "LabelSingular": "Six",
        "LabelPlural": "Sixes"
      }
    },
    
    "Security": {
      "CheckForDangerousSqlKeywords": true,
      "DangerousSqlKeywords": "alter,copy,create,createdb,createrole,createuser,delete,drop,exec,execute,grant,insert,update"
    },
    
    "Logging": {
      "LogFileFolder": "/var/log/budoco",
      "LogLevelMicrosoft": "Warning",
      "LogLevelBudoco": "Information",
      "LogLevelPostgres": "Warning"
    },
    
    "Debug": {
      "SkipSendingEmails": false,
      "AutoConfirmRegistration": false,
      "EnableRunSql": false,
      "SkipDeleteOfIncomingEmails": false,
      "PathToEmailFile": "",
      "FolderToSaveEmails": ""
    }
  }
}
